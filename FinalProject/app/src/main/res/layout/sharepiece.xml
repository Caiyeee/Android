<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/share_dot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/dot"
            android:contentDescription="圆点"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/share_line"
            app:layout_constraintRight_toLeftOf="@+id/share_username"/>
        <TextView
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:id="@+id/share_line"
            android:layout_gravity="center_horizontal"
            android:background="#bfbfbf"
            android:layout_marginLeft="7dp"
            app:layout_constraintTop_toBottomOf="@+id/share_dot"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_username"
            android:text="ye"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/share_dot"
            app:layout_constraintBottom_toBottomOf="@+id/share_dot"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_time"
            android:text="2018-01-08  18:15"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@+id/share_username"
            app:layout_constraintBottom_toBottomOf="@+id/share_username"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/mark"
            android:id="@+id/share_mark"
            android:layout_marginRight="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_image"
            android:background="@drawable/bg2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/share_username"
            app:layout_constraintLeft_toRightOf="@+id/share_line"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
